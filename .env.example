# ======================================
# Django 環境変数サンプル（.env.example）
# ======================================

# セキュリティキー（実際はここに秘密鍵は入れないでください）
SECRET_KEY=your-secret-key

# デバッグモード（True or False）
DEBUG=True

# 許可するホスト名（カンマ区切り）
ALLOWED_HOSTS=localhost,127.0.0.1

# データベースURL（SQLiteやMySQL、PostgreSQLのURL）
# 例: SQLite
DATABASE_URL=sqlite:///db.sqlite3
# 例: MySQL
# DATABASE_URL=mysql://myuser:mypassword@127.0.0.1:3306/myappdb

# OpenAI APIキー（必要な場合）
OPENAI_API_KEY=

# スーパーユーザー作成用（任意）
DJANGO_SUPERUSER_USERNAME=yourusername
DJANGO_SUPERUSER_EMAIL=you@example.com
DJANGO_SUPERUSER_PASSWORD=yourpassword
